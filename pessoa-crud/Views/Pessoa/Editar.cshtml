@model pessoa_crud.Models.Pessoa
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar @Model.Nome</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <h5 class="bg-primary text-white text-center m-2 p-2">RSVP</h5>
    <form asp-action="Editar" method="post" class="m-2">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <input hidden="hidden" asp-for="Codigo" class="form-control" value="@Model.Codigo" />
        </div>
        <div class="form-group">
            <label asp-for="Nome">Nome:</label>
            <input asp-for="Nome" class="form-control" value="@Model.Nome" />
        </div>
        <div class="form-group">
            <label asp-for="Sobrenome">Sobrenome:</label>
            <input asp-for="Sobrenome" class="form-control" value="@Model.Sobrenome" />
        </div>
        <div class="form-group">
            <label asp-for="Telefone">Telefone:</label>
            <input asp-for="Telefone" class="form-control" value="@Model.Telefone" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Email:</label>
            <input asp-for="Email" class="form-control" value="@Model.Email" />
        </div>
        <button type="submit" class="btn btn-primary">Atualizar pessoa</button>
    </form>
</body>
</html>