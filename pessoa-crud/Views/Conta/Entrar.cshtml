@model pessoa_crud.ViewModel.ContaEntrarViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-8">
        <h1>Entrar</h1>
        <form asp-action="Entrar" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Email</label>
                <input type="text" name="Email" value="@Model.Email" class="form-control" id="userEmail">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Senha</label>
                <input type="password" value="@Model.Senha" name="Senha" class="form-control" id="userPassword">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>



